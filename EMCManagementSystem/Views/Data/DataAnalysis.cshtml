<!DOCTYPE HTML>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Highcharts Example</title>
    <style type="text/css">
        #container {
            min-width: 310px;
            max-width: 800px;
            height: 400px;
            margin: 0 auto;
        }
      .highcharts-credits {
            display: none;
        }
    </style>
</head>
<body style="height:500px">
    
    <script src="~/Highcharts/js/highcharts.js"></script>
    <script src="~/Highcharts/js/series-label.js"></script>
    <script src="~/Highcharts/js/exporting.js"></script>
    <script src="~/Highcharts/js/highcharts-zh_CN.js"></script>
    <script src="~/Content/js/jquery.min.js"></script>
    <div id="container" ></div>

    <script type="text/javascript">
        
        $(function () {
            Highcharts.chart('container', {

                title: {
                    text: '汽车品牌合格率, 2010-2016'
                },

                subtitle: {
                    text: '详情如下图'
                },

                yAxis: {
                    title: {
                        text: '百分比'
                    }
                },
                legend: {
                    layout: 'vertical',
                    align: 'right',
                    verticalAlign: 'middle'
                },
                plotOptions: {
                    series: {
                        label: {
                            connectorAllowed: false
                        },
                        pointStart: 2010
                    }
                },
                series: [{
                    name: '五菱',
                    data: [0.55, 0.56, 0.60, 0.65, 0.64, 0.67, 0.70, 0.70]
                }, {
                    name: '江铃',
                    data: [0.55, 0.56, 0.55, 0.54, 0.57, 0.58, 0.57, 0.55]
                }, {
                    name: '本田',
                    data: [0.45, 0.50, 0.51, 0.53, 0.55, 0.58, 0.59, 0.58]
                }, {
                    name: '丰田',
                    data: [null, null, 0.45, 0.45, 0.50, 0.45, 0.50, 0.50]
                }, {
                    name: '奇瑞',
                    data: [0.55, 0.55, 0.55, 0.55, 0.55, 0.55, 0.55, 0.55]
                }],
                responsive: {
                    rules: [{
                        condition: {
                            maxWidth: 500
                        },
                        chartOptions: {
                            legend: {
                                layout: 'horizontal',
                                align: 'center',
                                verticalAlign: 'bottom'
                            }
                        }
                    }]
                }

            });
        })
      
    </script>
</body>
</html>
